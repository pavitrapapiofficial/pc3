            $this->customerSession->setSuccessMsg($msg);
            // $this->_messageManager->addSuccessMessage(__($msg));
            $this->_redirect('*/*/index');
            // $resultRedirect = $this->resultFactory->create(ResultFactory::TYPE_REDIRECT);        
            // // Your code        
